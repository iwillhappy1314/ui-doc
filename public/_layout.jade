doctype
html
    head
        title #{ title }
        link(rel="stylesheet" href="#{ uri }/dist/styles/main.css")
        link(rel="stylesheet" href="#{ uri }/dist/styles/responsive.css")
        //- link(rel='stylesheet', href='#{ uri }/dist/styles/old.css', type='text/css', media='all')

        link(rel="stylesheet" href="#{ uri }/dist/styles/demo.css")
        meta(name='viewport', content='width=device-width, initial-scale=1')
        script(src="#{ uri }/dist/scripts/jquery.js")
        script(src="#{ uri }/dist/scripts/bxslider.js")
        script(src="#{ uri }/dist/scripts/html5shiv.js")
        script(src="#{ uri }/dist/scripts/main.js")


    body#main(data-spy="scroll", data-target="#nav")

        block content

            header.demo-header.sep
                .wrap
                    a#menu-trigger.pull-right.pure-button 菜单
                    h1 Wizhi CMS UI 库
                    h3 Wizhi CMS 插件中用到的样式库，也可以在其他地方使用

            .wrap
                .pure-g.row
                    #sidebar.pure-u-1.pure-u-md-1-5.pure-hide-md
                        .col
                            ul.list-group
                                for article, slug in public.ui._data
                                    li.list-group-item
                                        a(href="#{ uri }/ui/#{ slug }.html")
                                            span= article.title

                    #primary.pure-u-1.pure-u-md-4-5
                        .col
                            != yield

                footer.demo-footer
                    .wrap.text-center.text--cap
                        p CopyRight 2016 wpzhiku